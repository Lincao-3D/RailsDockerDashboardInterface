<div class="video-background-container">
  <video autoplay muted loop id="loginBgVideo" class="video-background-fade-in">
    <source src="<%= asset_path 'vid1.webm' %>" type="video/webm">
    Your browser does not support HTML5 video.
  </video>
  <div class="video-overlay"></div>
</div>

<div class="login-container d-flex align-items-center justify-content-center">
  <div class="login-card card p-4 rounded shadow-lg bg-dark">
    <h2 class="text-center mb-4" style="color: #ccc;"><%# Title text light-grey %>Log In</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-3">
        <%= f.label :email, class: "form-label", style: "color: #ccc;" %><br /> <%# Label text light-grey %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :password, class: "form-label", style: "color: #ccc;" %><br /> <%# Label text light-grey %>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mb-3 form-check">
          <%= f.check_box :remember_me, class: "form-check-input" %>
          <%= f.label :remember_me, class: "form-check-label", style: "color: #ccc;" %> <%# Label text light-grey %>
        </div>
      <% end %>

      <div class="d-grid">
        <%= f.submit "Log in", class: "btn btn-primary" %>
      </div>
    <% end %>

    <div class="mt-3 text-center" style="color: #ccc;">
      <%= render "admin_users/shared/links" %> <%# Links styled separately if needed %>
    </div>
  </div>
</div>
